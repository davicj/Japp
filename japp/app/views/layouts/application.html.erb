<!DOCTYPE html>
<html>
  <head>
    <title>Japp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1>ProyectArt</h1>
    <p>Smile Works</p>
    <ul class="nav justify-content-end">
      <% if usert_signed_in? %>
      <li class="nav-item">
        <%= link_to 'Salir', destroy_usert_session_path, method: :delete %>
      </li>

      <% else %>
      <li class="nav-item">
        <%= link_to 'Ingresar', new_usert_session_path  %>
      </li>
      <li class="nav-item">
        <%= link_to 'Registrarme', new_usert_registration_path %>
      </li>
      <% end %>
    </ul>

    <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>
    <%= yield %>
  </body>
</html>
